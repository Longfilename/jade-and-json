style.
    * {
        margin: 0;
        box-sizing: border-box;
    }
    html {
        background: #ccc;
    }
    div.container {
        display: flex;
        flex-direction: row;
        padding: 32px;
    }
    div.column {
        background: #fff;
        border: 10px solid #ccc;
        padding: 16px;
        
        flex: 1 1 auto;
        width: 50%;
        transition: width 0.7s ease-out;
        overflow: hidden;
        position: relative;
        z-index: 1;
    }
    div.column:hover {
        border-color: #999;
        width: 95%;
        z-index: 2;
    }
    div.column + div.column {
        margin-left: -10px;
    }
    table {
        border-collapse: collapse;
        width: 100%;
        min-width: 300px;
        margin: 8px 0 0;
    }
    th {
        text-align: left;
        padding: 8px;
    }
    td {
        border-top: 1px solid #ccc;
        border-left: 1px solid #eee;
        padding: 8px;
    }
    td:first-child {
        border-left-width: 0;
    }
    tr:hover {
        color: red;
    }
